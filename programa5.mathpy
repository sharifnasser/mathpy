program programa5: 
	integer :: num, fact

	subroutine factorial()
		if num > 0 then
			fact = fact * num
			num = num - 1
			print *, fact
			factorial()
		end if
	end subroutine factorial

	fact = 1

	read *, num

	factorial()

	print *, fact

end program